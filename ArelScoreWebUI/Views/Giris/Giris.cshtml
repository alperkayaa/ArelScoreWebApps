@model ArelScoreWebUI.Models.ViewModel.UserLoginViewModel
@{
    ViewData["Title"] = "Giriþ Yap";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriþ Yap</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #4f9dfc, #6b77f5);
            background-attachment: fixed;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-radius: 1.5rem;
            box-shadow: 0 6px 40px rgba(0, 0, 0, 0.15);
            padding: 50px 40px;
            max-width: 500px;
            width: 100%;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .logo {
            margin-bottom: 16px; /* Önceki 30px'di */
        }

            .logo img {
                width: 100px;
                border-radius: 50%;
            }

        h2 {
            text-align: center;
            margin-bottom: 1.2rem; /* Önceki 2rem'di */
            font-size: 2rem;
            font-weight: 600;
            color: #ffffff;
        }

        form {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-group {
            width: 100%;
            max-width: 400px;
            margin: 0 auto 1.5rem auto;
            display: flex;
            flex-direction: column;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
            color: #e0e0e0;
        }

        .form-control {
            width: 100%;
            padding: 16px 20px;
            border: none;
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.25);
            color: white;
            font-size: 1.1rem;
            outline: none;
        }

            .form-control:focus {
                border: 2px solid #90cdf4;
                background-color: rgba(255, 255, 255, 0.35);
            }

        .btn-primary {
            background-color: #2563eb;
            color: white;
            padding: 14px;
            border: none;
            width: 100%;
            max-width: 400px;
            border-radius: 10px;
            font-size: 1.2rem;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1e40af;
            }

        .frgpass {
            display: block;
            text-align: center;
            color: #dbeafe;
            margin-top: 1.5rem;
            font-size: 1rem;
            text-decoration: underline;
        }

            .frgpass:hover {
                color: #bfdbfe;
            }

        .error-message {
            background-color: rgba(255, 69, 69, 0.85);
            padding: 12px;
            color: white;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 1rem;
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

    </style>
</head>
<body>
    <div class="form-container">
        <div class="logo">
            <img src="~/images/loginpanel.png" alt="ArelScore Logo" />
        </div>

        <h2>ArelScore'a Hoþ Geldin</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-message">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <form asp-controller="Giris" asp-action="Giris" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="form-label">E-Posta</label>
                <input type="email" name="Email" class="form-control" required />
            </div>

            <div class="form-group">
                <label class="form-label">Parola</label>
                <input type="password" name="Password" class="form-control" required />
            </div>

            <button type="submit" class="btn-primary">Giriþ Yap</button>
        </form>

        <a href="@Url.Action("Kayit", "Giris")" class="frgpass">Hesabýn yok mu? Kayýt Ol!</a>
    </div>
</body>
</html>
