@model ArelScoreWebUI.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayýt Ol - ArelScore</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #4f9dfc, #6b77f5);
            background-attachment: fixed;
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .form-wrapper {
            width: 100%;
            max-width: 420px;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: 1rem;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            padding: 40px 30px;
            color: white;
            text-align: center;
        }

        .logo img {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            margin-bottom: 15px;
        }

        h2 {
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            color: #ffffff;
        }

        .form-group {
            margin-bottom: 1rem;
            text-align: left;
        }

        .form-label {
            display: block;
            margin-bottom: 0.3rem;
            color: #e0e0e0;
        }

        .form-control {
            width: 100%;
            padding: 10px 14px;
            border: none;
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.25);
            color: white;
            font-size: 1rem;
            outline: none;
        }

            .form-control:focus {
                border: 2px solid #90cdf4;
                background-color: rgba(255, 255, 255, 0.35);
            }

        .btn-primary {
            background-color: #2563eb;
            color: white;
            padding: 10px;
            border: none;
            width: 100%;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1e40af;
            }

        .frgpass {
            display: block;
            width: 100%;
            max-width: 400px;
            text-align: center;
            color: #dbeafe;
            margin-top: 1.5rem;
            font-size: 1rem;
            text-decoration: underline;
            padding: 12px 0; 
            border-radius: 10px;
            transition: background-color 0.3s ease;
        }

            .frgpass:hover {
                color: #ffffff;
                background-color: rgba(255, 255, 255, 0.1);
            }

    </style>
</head>
<body>
    <div class="form-wrapper">
        <div class="form-container">
            <!-- Logo -->
            <div class="logo">
                <img src="~/images/loginpanel.png" alt="ArelScore Logo" />
            </div>

            <h2>ArelScore Kayýt</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            <form asp-controller="Giris" asp-action="Kayit" enctype="multipart/form-data" method="post">

                <div class="form-group">
                    <label for="reg-Name" class="form-label">Ad</label>
                    <input type="text" class="form-control" id="reg-Name" asp-for="FirstName" required>
                </div>

                <div class="form-group">
                    <label for="reg-Surname" class="form-label">Soyad</label>
                    <input type="text" class="form-control" id="reg-Surname" asp-for="LastName" required>
                </div>
                            
                <div class="form-group">
                    <label for="reg-Email" class="form-label">E-Posta</label>
                    <input type="email" class="form-control" id="reg-Email" asp-for="Email" required>
                </div>

                <div class="form-group">
                    <label for="reg-Password" class="form-label">Parola</label>
                    <input type="password" class="form-control" id="reg-Password" asp-for="Password" required>
                </div>

                <button type="submit" class="btn-primary">Kayýt Ol</button>
            </form>
            <a href="@Url.Action("Giris", "Giris")" class="frgpass">Zaten üye misin? Giriþ Yap!</a>
        </div>
    </div>
</body>
</html>
