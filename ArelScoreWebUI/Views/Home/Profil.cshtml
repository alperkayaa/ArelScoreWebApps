@model ArelScoreWebUI.Models.User
@{
    ViewData["Title"] = "Kullanýcý Bilgileri";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanýcý Bilgilerini Güncelle</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .form-group {
            border-radius: 25px;
            margin-bottom: 1rem;
        }

        .form-control {
            border-radius: 25px;
        }

        .btn-primary {
            border-radius: 25px;
            padding: 10px 20px;
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        h2, h4 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .card {
            border-radius: 25px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .nav-tabs .nav-link {
            border-radius: 25px 25px 0 0;
        }

        .tab-content {
            padding-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-12">
                <div class="card">
                    <div class="card-body">

                        <h2 class="card-title">Profilim</h2>

                        <!-- Sekmeler -->
                        <ul class="nav nav-tabs" id="profilTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="bilgiler-tab" data-toggle="tab" href="#bilgiler" role="tab">Bilgilerim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="sifre-tab" data-toggle="tab" href="#sifre" role="tab">Þifre Deðiþtir</a>
                            </li>
                        </ul>

                        <div class="tab-content" id="profilTabContent">
                            <!-- Bilgiler Sekmesi -->
                            <div class="tab-pane fade show active" id="bilgiler" role="tabpanel">
                                <div class="form-group mt-4">
                                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @readonly = "readonly" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <!-- Þifre Deðiþtir Sekmesi -->
                            <div class="tab-pane fade" id="sifre" role="tabpanel">
                                @using (Html.BeginForm("Profil", "Home", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-group mt-4">
                                        <label for="CurrentPassword">Mevcut Þifre</label>
                                        <input type="password" name="CurrentPassword" id="CurrentPassword" class="form-control" required />
                                    </div>

                                    <div class="form-group">
                                        <label for="NewPassword">Yeni Þifre</label>
                                        <input type="password" name="NewPassword" id="NewPassword" class="form-control" required />
                                    </div>

                                    <div class="form-group">
                                        <label for="ConfirmPassword">Yeni Þifre (Tekrar)</label>
                                        <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" required />
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-block mt-3">Þifreyi Güncelle</button>

                                    @if (ViewBag.StatusMessage != null)
                                    {
                                        <div class="alert alert-success mt-3 text-center">@ViewBag.StatusMessage</div>
                                    }
                                    else if (ViewBag.ErrorMessage != null)
                                    {
                                        <div class="alert alert-danger mt-3 text-center">@ViewBag.ErrorMessage</div>
                                    }
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (tablar için gerekli) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
